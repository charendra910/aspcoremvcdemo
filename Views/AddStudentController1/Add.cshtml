@model studentregister

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />

<h1>Add</h1>
<form method="post">
    <div class=" border p-3 m-4">
        <div class="row pb-3">
            <h2 class="text-primary">students</h2>
            <hr />
